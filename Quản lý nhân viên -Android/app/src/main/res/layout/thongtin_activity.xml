<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin ứng dụng"
        android:textSize="34dp"
        android:layout_marginTop="5pt"

        />
    <TextView
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý nhân viên"
        android:textSize="34dp"
        android:layout_marginTop="5pt"

        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:text="Nhóm 6"
        android:textSize="30pt"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15pt"
        android:layout_marginTop="10pt"
        android:text="Trịnh Văn Quốc" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15pt"
        android:layout_marginTop="5pt"
        android:text="Nguyễn Long Hải" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15pt"
        android:layout_marginTop="5pt"
        android:text="Trần Đức Duy" />
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50pt">
    <Button
        android:id="@+id/Bc"
        android:layout_width="25pt"
        android:layout_height="wrap_content"
        app:icon="@drawable/phon"
        android:background="@drawable/custom01"
        android:layout_marginRight="20pt" />

      <Button
          android:id="@+id/Bfb"
          android:layout_width="25pt"
          android:layout_height="wrap_content"
          android:layout_marginRight="20pt"
          android:background="@drawable/custom01"
          app:icon="@android:drawable/sym_action_chat"/>
</LinearLayout>

</LinearLayout>
