<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/bgdn">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true">



        <ImageView
            android:layout_width="196dp"
            android:layout_height="143dp"
            android:src="@drawable/anhbia"
            android:layout_marginBottom="50dp">

        </ImageView>

        <EditText
            android:id="@+id/ed1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email , Số điện thoại "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:inputType="text"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="20dp"></EditText>

        <EditText
            android:id="@+id/ed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:textSize="20dp"
            android:layout_marginLeft="20px"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"></EditText>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu"
            android:textColor="#010"
            android:textSize="15dp"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"></TextView>
        <Button
            android:id="@+id/btdn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:layout_marginBottom="20dp"
            android:background="#03D0F4"

            ></Button>

        <Button
            android:id="@+id/btdk"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:background="#2196F3"></Button>
    </LinearLayout>

</RelativeLayout>